extends layout
include _includes/sharedHTMLfunctions

block content
  //h1= title
  //p Welcome to #{title}

  // Page header that fills the entire width of the screen
  .row.banner
    .col-12
        h1= pageHeader.title
            small &nbsp; #{pageHeader.strapline}

  .row
    // Container for the list of locations, spanning all 12 columns on extra-small
    .col-12.col-md-8
      each location in locations
        .card
          .card-block
            h4
              a(href="/location")= location.name
              small &nbsp;
                +outputRating(location.rating)
              span.badge.badge-pill.badge-default.float-right= location.distance
            p.address= location.address

              // Use Font Awasome icons to output a star rating
              //small &nbsp;
                i.fas.fa-star
                i.fas.fa-star
                i.fas.fa-star
                i.fas.fa-star
                i.fas.fa-star
              // Use Bootstrap's badge helper class to display the distance away
              //span.badge.badge-pill.badge-default.float-right 100m

            // Address of the locaation
            //p.address 125 High Street, Reading, RG6 1PS

            // Facilities of the location, output using Bootstrap's badge classes
            .facilities
              each facility in location.facilities
                span.badge.badge-warning= facility 
    
    // Container for secondary or sidebar information, spanning all 12 columns on extra-small
    .col-12.col-md-4
      p.lead= sidebar 